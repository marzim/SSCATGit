<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>
	<startup>
		<supportedRuntime version="v2.0.50727" />
	</startup>
	<connectionStrings>
	</connectionStrings>
	<appSettings>
		<add key="ApplicationContext" value="Context-Test" />
		<add key="Context-Test" value="C:\Projects\finger\trunk\config\Sscat-TestContext.xml" />
		<add key="Context-Production" value="C:\Projects\finger\trunk\config\Sscat.context" />
	</appSettings>
	<log4net>
		<appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
			<mapping>
				<level value="ERROR" />
				<foreColor value="White" />
				<backColor value="Red, HighIntensity" />
			</mapping>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
			</layout>
		</appender>
		<root>
			<level value="ALL" />
			<appender-ref ref="ColoredConsoleAppender" />
		</root>
	</log4net>
</configuration>